  "processes": [
    {
      "id": "process-demo-1",
      "name": "Click and Type Demo",
      "description": "Demonstrates clicking and typing",
      "type": "sequence",
      "actions": [
        {
          "id": "action-1",
          "type": "CLICK",
          "config": {
            "target": {
              "type": "coordinates",
              "x": 500,
              "y": 300
            },
            "clickType": "left",
            "clickCount": 1
          },
          "timeout": 5000,
          "retryCount": 3,
          "continueOnError": false
        },
        {
          "id": "action-2",
          "type": "TYPE",
          "config": {
            "text": "Hello from Qontinui!",
            "typing_delay": 50
          },
          "timeout": 5000,
          "retryCount": 3,
          "continueOnError": false
        },
        {
          "id": "action-3",
          "type": "WAIT",
          "config": {
            "duration": 2000
          },
          "timeout": 5000,
          "retryCount": 1,
          "continueOnError": false
        }
      ]
    },
    {
      "id": "process-demo-2",
      "name": "Scroll Demo",
      "description": "Demonstrates scrolling",
      "type": "sequence",
      "actions": [
        {
          "id": "action-4",
          "type": "SCROLL",
          "config": {
            "direction": "down",
            "amount": 3
          },
          "timeout": 5000,
          "retryCount": 1,
          "continueOnError": false
        },
        {
          "id": "action-5",
          "type": "WAIT",
          "config": {
            "duration": 1000
          },
          "timeout": 5000,
          "retryCount": 1,
          "continueOnError": false
        },
        {
          "id": "action-6",
          "type": "SCROLL",
          "config": {
            "direction": "up",
            "amount": 3
          },
          "timeout": 5000,
          "retryCount": 1,
          "continueOnError": false
        }
      ]
    }
